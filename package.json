{
  "name": "patternlab-parcel",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pl:build": "patternlab build --config ./patternlab-config.json",
    "pl:help": "patternlab --help",
    "pl:install": "patternlab install --config ./patternlab-config.json",
    "pl:serve": "patternlab serve --config ./patternlab-config.json",
    "pl:version": "patternlab --version",
    "start": "concurrently --names \"PATTERNLAB,PARCEL\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run pl:serve\" \"npm run parcel\"",
    "parcel": "parcel watch --target css:dev --target js:dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@pattern-lab/cli": "^5.15.2",
    "@pattern-lab/core": "^5.15.2",
    "@pattern-lab/engine-handlebars": "^5.15.1",
    "@pattern-lab/starterkit-handlebars-vanilla": "^1.4.2",
    "@pattern-lab/uikit-workshop": "^5.15.3"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.0.1",
    "autoprefixer": "10.4.0",
    "concurrently": "6.4.0",
    "css-declaration-sorter": "6.1.3",
    "css-mqpacker": "7.0.0",
    "cssnano": "5.0.12",
    "parcel": "2.0.1",
    "postcss-prefix-selector": "1.13.0"
  },
  "targets": {
    "css:dev": {
      "source": [
        "source/scss/style.scss",
        "source/scss/pattern-scaffolding.scss"
      ],
      "distDir": "source/css/"
    },
    "js:dev": {
      "source": [
        "source/js/global.js"
      ],
      "distDir": "source/js/build"
    }
  }
}
